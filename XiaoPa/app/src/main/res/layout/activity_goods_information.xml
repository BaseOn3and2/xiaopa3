<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@color/orange"
        >


        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="@string/back"
            android:background="@drawable/back"
            />
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="2dp"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:textSize="18sp"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.5"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="13.5"
        android:orientation="vertical"
        >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:background="@drawable/ballon"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8"
            android:weightSum="10"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="加厚彩色气球装饰生日派对国庆婚房布置用品"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:layout_weight="7.05"
                android:textColor="@color/Black"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:text="￥13.99-15.99"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:layout_weight="2.95"
            />

        </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="2"
          >
        <ImageView
            android:id="@+id/iv_share"
            android:layout_marginTop="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/star"
            />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="联系客服"
              android:gravity="center"
              />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="快递:0.00"
            android:textSize="14sp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="月销量:5391"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="产地:浙江金华"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1"
            />

    </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#EDEDED"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.75"
    android:weightSum="10"
    >

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="选择类别"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/Black"
        android:layout_weight="3"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/choose"
        />

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="商品评价(255)"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/Black"
                android:id="@+id/tv_evaluate"
                android:onClick="evaluate"
                />
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="商品参数"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/Black"
                android:id="@+id/tv_information"
                android:onClick="information"
                />
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="产品推荐"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/Black"
                android:id="@+id/tv_recommendation"
                android:onClick="recommendation"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"
            />
        <com.base.xiaopa.view.NoScrollViewPager
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_weight="10"
            android:id="@+id/goods_viewpager"
           />

            


    </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="8"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="3"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:text="已选择类别:红色,加厚"
                android:layout_weight="1"
                android:textColor="#FF3C00"
                android:paddingLeft="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:text="数量:1"
                android:layout_weight="1"
                android:textColor="#FF3C00"
                android:paddingLeft="10dp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:text="加入购物车"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#FFA127"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:text="立即购买"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#FF0000"
            />

    </LinearLayout>


</LinearLayout>